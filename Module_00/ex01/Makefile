NAME = phonebook

CC = c++

CFLAGS = -Wall -Wextra -Werror -g3 -fsanitize=address -std=c++98

RM = rm -f

SRC = PhoneBook.cpp \
	Contact.cpp \
	main.cpp

OBJS = $(SRC:.cpp=.o)

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJS)

%.o: %.cpp
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) $(OBJS)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re